export LDFLAGS="-L/usr/local/opt/llvm/lib"
export CPPFLAGS="-I/usr/local/opt/llvm/include"
export EDITOR="nvim"

export FZF_DEFAULT_OPTS="--color="bg+:#2c323b,fg+:#d54e53,border:#90c966" --height=50% --layout=reverse --border=sharp --preview '(bat -p --color always {} || tree {} || cat {} ) 2> /dev/null'"

